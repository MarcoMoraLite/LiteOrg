<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="connector_custom_fields" inherit_id="w_custom_events_auth_signup.fields">
        <xpath expr="//div[@id='names-row-div']" position="replace">
            <div t-if="not only_passwords" id="names-row-div" class="form-row col-lg-12">
                <div t-attf-class="form-group col-lg-16">
                    <label class="col-form-label top-fix" for="phone">
                        Teléfono Celular
                        <txt class="aster-font-size">*</txt>
                    </label>
                    <input id="phone-field" type="text" name="phone" class="form-control" required="required"
                           autocapitalize="off" pattern="[0-9]{10}"/>
                </div>
            </div>
        </xpath>
        <xpath expr="//div[@id='identification-div']" position="replace"/>
        <xpath expr="//div[@id='address-div']" position="replace"/>
<!--        <xpath expr="//div[@id='zip-div']" position="replace"/>-->
        <xpath expr="//div[@id='zip-div']" position="replace"/>
        <xpath expr="//div[@id='password-div']" position="after">
            <input id="ine_document" class="o_input_file form-control" type="file" accept="application/pdf" style="padding-top: 15px; padding-bottom: 6px; height: auto;" required="required"/>
            <button type="submit" class="btn btn-primary btn-block">Validar INE</button>
            <input id="number_cedula" class="o_input_file form-control" type="file" accept="application/pdf" style="padding-top: 15px; padding-bottom: 6px; height: auto;" required="required"/>
            <button type="submit" class="btn btn-primary btn-block">Validar Cédula</button>
            <input id="selfie_file" class="o_input_file form-control" type="file" accept="application/pdf" style="padding-top: 15px; padding-bottom: 6px; height: auto;" required="required"/>
            <button type="submit" class="btn btn-primary btn-block">Validar Foto</button>    
        </xpath>
    </template>
</odoo>

