<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="sale_report_view_pivot" model="ir.ui.view">
             <field name="name">sale.report.pivot</field>
             <field name="model">valida_curp.report</field>
             <field name="arch" type="xml">
                 <pivot string="Analisis de datos" disable_linking="True" display_quantity="true" sample="1">
                     <field name="state" type="row"/>
                     <field name="ine_aux" type="measure"/>
                     <field name="ced_aux" type="measure"/>
                     <field name="selfie_aux" type="measure"/>
                 </pivot>
             </field>
        </record>
        
        <record id="sale_report_view_graph" model="ir.ui.view">
             <field name="name">sale.report.graph</field>
             <field name="model">valida_curp.report</field>
             <field name="arch" type="xml">
                 <graph string="Datos" type="bar">
                     <field name="state"/>
                     <field name="ine_aux" type="measure"/>
                 </graph>
             </field>
        </record>

        <record id="sale_report_view_dashboard" model="ir.ui.view">
            <field name="name">sale.report.view.dashboard</field>
            <field name="model">valida_curp.report</field>
            <field name="mode">primary</field>
            <field name="arch" type="xml">
                <dashboard sample="1">
                    <view type="graph" ref="sale_report_view_graph"/>
                    <group>
                        <group>
                            <aggregate name="registros_today" string="Registros hoy" field="selfie_aux"/>
                            <aggregate name="registros_week" string="Registros esta semana" field="selfie_aux"/>
                            <aggregate name="registros_month" string="Registros este mes" field="selfie_aux"/>
                            <aggregate name="faltan_datos" string="Registros faltantes de datos" field="faltan_datos_aux"/>
                            <aggregate name="registros_exitosos" string="Registros exitosos" field="ced_aux"/>
                            <aggregate name="total_registros" string="Total de registros" field="total_registros"/>
                        </group>
                    </group>
                    <view type="pivot" ref="sale_report_view_pivot"/>
                </dashboard>
            </field>
        </record>

        <!--<record id="action_order_report_so_salesteam" model="ir.actions.act_window">
            <field name="view_mode">dashboard</field>
            <field name ="view_id" ref="sale_report_view_dashboard"/>
        </record> -->

        <record id="sale_report_action_dashboard" model="ir.actions.act_window">
            <field name="name">Sales Analysis</field>
            <field name="res_model">valida_curp.report</field>
            <field name="view_mode">pivot,graph,dashboard</field>
            <field name="view_id"></field> 
        </record>

        <record id="sale_report_action_dashboard_dashboard" model="ir.actions.act_window.view">
        	<field name="sequence" eval="1"/>
        	<field name="view_mode">dashboard</field>
        	<field name="view_id" ref="sale_report_view_dashboard"/>
        	<field name="act_window_id" ref="sale_report_action_dashboard"/>
        </record>

        <record id="sale_report_action_dashboard_pivot" model="ir.actions.act_window.view">
        	<field name="sequence" eval="2"/>
        	<field name="view_mode">pivot</field>
        	<field name="view_id" ref="sale_report_view_pivot"/>
        	<field name="act_window_id" ref="sale_report_action_dashboard"/>
        </record>

        <record id="sale_report_action_dashboard_graph" model="ir.actions.act_window.view">
        	<field name="sequence" eval="3"/>
        	<field name="view_mode">graph</field>
        	<field name="view_id" ref="sale_report_view_graph"/>
        	<field name="act_window_id" ref="sale_report_action_dashboard"/>
        </record>

        <!--<record id="sale.menu_report_product_all" model="ir.ui.menu">
            <field name="action" ref="sale_report_action_dashboard"/>
        </record> -->

        <menuitem id="menu_report_dashboard"
        name="Dashboard"
        parent="valida_curp.menu_root"
        sequence="5"/>
    
        <menuitem id="submenu_report_team_goals"
        name="Dashboard"
        action="sale_report_action_dashboard"
        parent="menu_report_dashboard"
        sequence="1"/>
    </data>
</odoo>


