<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="dashboard_report" model="ir.ui.view">
         <field name="name">dashboard.report</field>
         <field name="model">valida_curp.report</field>
         <field name="arch" type="xml">
             <kanban>
                 <field name="ine_count" type="col"/>
                 <field name="ced_count" type="col"/>
                 <field name="selfie_count" type="col"/>
                 <field name="primerApellido" type="col"/>
                 <field name="curp" type="col"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_content oe_kanban_global_click">
                                <div class="row">
                                    <div class="col-4">
                                        <strong>
                                            <field name="primerApellido"/>
                                        </strong>
                                    </div>
                                    <div class="col-8">
                                        <field name="curp"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>

         </field>
    </record>
    
    <record id="action_dashboard" model="ir.actions.act_window">
        <field name="name">Dashboard</field>
        <field name="res_model">valida_curp.report</field>
        <field name="view_mode">pivot</field>
        <field name="view_id"></field> 
        <field name="help">Panel....</field>
    </record>
    
        <menuitem id="menu_report_dashboard"
        name="Report Teams"
        parent="valida_curp.menu_root"
        sequence="5"/>
    
        <menuitem id="submenu_report_team_goals"
        name="Dashboard"
        action="action_dashboard"
        parent="menu_report_dashboard"
        sequence="1"/>

</odoo>
