<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="dashboard_report" model="ir.ui.view">
         <field name="name">dashboard.report</field>
         <field name="model">valida_curp.report</field>
         <field name="arch" type="xml">
             <graph string="Sales Order Lines" type="bar">
                  <field name="state"/>
                  <field name="ine_aux" type="measure"/>
             </graph>
         </field>
    </record>
    
    <record id="sale_report_view_dashboard" model="ir.ui.view">
            <field name="name">dashboard.report.view</field>
            <field name="model">valida_curp.report</field>
            <field name="mode">primary</field>
            <field name="arch" type="xml">
                <form sample="1">
                    <view type="graph" ref="valida_curp.report"/>
                    <group>
                        <group>
                            <aggregate name="price_subtotal_confirmed_orders" string="Total Sales" field="ine_aux" help="Total, Tax Included" widget="monetary"/>
                            <aggregate name="price_subtotal_all_orders" string="Untaxed Total" field="ine_aux" widget="monetary"/>
                        </group>
                    </group>
                </form>
            </field>
        </record>
    
    <record id="action_dashboard" model="ir.actions.act_window">
        <field name="name">Dashboard</field>
        <field name="res_model">valida_curp.report</field>
        <field name="view_mode">pivot,graph,dashboard</field>
        <field name="view_id"></field> 
        <field name="help">Panel....</field>
    </record>
    
        <menuitem id="menu_report_dashboard"
        name="Report Teams"
        parent="valida_curp.menu_root"
        sequence="5"/>
    
        <menuitem id="submenu_report_team_goals"
        name="Dashboard"
        action="action_dashboard"
        parent="menu_report_dashboard"
        sequence="1"/>

</odoo>

