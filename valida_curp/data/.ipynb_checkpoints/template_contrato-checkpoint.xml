<odoo>
    <data noupdate="1">
        <record id="email_template_contrato" model="mail.template">
            <field name="name">Aqui esta tu contrato</field>
            <field name="model_id" ref="sale_stock_alert.model_sale_order"/>
            <field name="subject">Prueba de contrato</field>
            <field name="email_from">${(object.user_id.email_formatted or user.email_formatted) | safe}</field>
            <field name="body_html" type="html">
<![CDATA[
<p>Dear Marco},
<br/>
<br/>
Good job, this is our first e-mail template!<br/>
</p>
Regards,<br/>
Lite ]]></field>
            <field name="lang">en_US</field>
            <field name="auto_delete" eval="True"/>
        </record>
    </data>
</odoo>

