<?xml version="1.0" encoding='UTF-8'?>
<odoo>
    <data>
        <record id="template_contrato" model="mail.template">
            <field name="name">Template de contratos</field>
            <field name="model_id" ref="valida_curp.valida_curp.valida_curp"/>
            <field name="subject">Aqui esta tu contrato</field>
            <field name="email_from">marco.mora@liteorg.com</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                <p>
                    Estimado:
                </p>
                <p>
                    Adjunto, Reporte de visitas al website
                </p>
                <p>
                    Saludos
                </p>
            </div>
                
            </field>
            <field name="lang">${object.partner_id.lang}</field>
            <field name="user_signature" eval="False"/>
            <field name="auto_delete" eval="False"/>
        </record>

    </data>
</odoo>

