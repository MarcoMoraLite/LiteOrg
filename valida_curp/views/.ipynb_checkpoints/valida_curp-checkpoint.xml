<odoo>
  <data>
    <record model="ir.ui.view" id="valida_curp.list">
      <field name="name">valida_curp list</field>
      <field name="model">valida_curp.valida_curp</field>
      <field name="arch" type="xml">
        <form string="Validador de cedula">
            <header >
                <button name="send_email_template" type="object" string="Enviar Contrato" />
                <button name="comprobar" type="object" states="cedula" string="Validar Cedula" />
                <button name="confirmarCed" type="object" states="cedula" string="Confirmar CÃ©dula"/>
                <button name="comprobar2" type="object" states="ine" string="Validar INE"/>
                <button name="confirmarIne" type="object" states="ine" string="Confirmar"/>
                <button name="selfie" type="object" states="foto" string="Validar Foto"/>
                <button name="confirmarSelfie" type="object" states="foto" string="Confirmar Foto"/>
                <button name="guardaContacto" type="object" states="bancarios" string="Guardar datos"/>
                <field name="state" widget="statusbar" statusbar_visible="ine,cedula,foto,bancarios"/>
            </header>
            <sheet>
                <group col="4">
                  <field name="ine" attrs="{'invisible':[['state','not in',['ine']]]}" colspam="2"/>
                  <field name="response2" attrs="{'invisible':[['state','not in',['ine']]]}" colspam="2"
                         readonly="1"/>
                  <field name="cedula" attrs="{'invisible':[['state','not in',['cedula']]]}" colspam="2"/>
                  <field name="response" attrs="{'invisible':[['state','not in',['cedula']]]}" colspam="2" readonly="1"/>
                  <field name="ine_foto" attrs="{'invisible':[['state','not in',['foto']]]}" colspam="2"/>
                  <field name="response3" attrs="{'invisible':[['state','not in',['foto']]]}" colspam="2" readonly="1"/>
                  <field name="curp" attrs="{'invisible':[['state','not in',['ine']]]}" colspam="2" readonly="1"/>
                  <field name="fechaNacimiento" attrs="{'invisible':[['state','not in',['ine']]]}" colspam="2" readonly="1"/>
                  <field name="primerApellido" attrs="{'invisible':[['state','not in',['ine']]]}" colspam="2" readonly="1"/>
                  <field name="segundoApellido" attrs="{'invisible':[['state','not in',['ine']]]}" colspam="2" readonly="1"/>
                  <field name="nombres" attrs="{'invisible':[['state','not in',['ine']]]}" colspam="2" readonly="1"/>
                  <field name="sexo" attrs="{'invisible':[['state','not in',['ine']]]}" colspam="2" readonly="1"/>
                  <field name="calle" attrs="{'invisible':[['state','not in',['ine']]]}" colspam="2" readonly="1"/>
                  <field name="colonia" attrs="{'invisible':[['state','not in',['ine']]]}" colspam="2" readonly="1"/>
                  <field name="codigo_postal" attrs="{'invisible':[['state','not in',['ine']]]}" colspam="2" readonly="1"/>
                  <field name="ciudad" attrs="{'invisible':[['state','not in',['ine']]]}" colspam="2" readonly="1"/>
                  <field name="subTipo" attrs="{'invisible':[['state','not in',['ine']]]}" colspam="2" readonly="1"/>
                  <field name="claveElector" attrs="{'invisible':[['state','not in',['ine']]]}" colspam="2" readonly="1"/>
                  <field name="registro" attrs="{'invisible':[['state','not in',['ine']]]}" colspam="2" readonly="1"/>
                  <field name="estado" attrs="{'invisible':[['state','not in',['ine']]]}" colspam="2" readonly="1"/>
                  <field name="municipio" attrs="{'invisible':[['state','not in',['ine']]]}" colspam="2" readonly="1"/>
                  <field name="seccion" attrs="{'invisible':[['state','not in',['ine']]]}" colspam="2" readonly="1"/>
                  <field name="localidad" attrs="{'invisible':[['state','not in',['ine']]]}" colspam="2" readonly="1"/>
                  <field name="emision" attrs="{'invisible':[['state','not in',['ine']]]}" colspam="2" readonly="1"/>
                  <field name="vigencia" attrs="{'invisible':[['state','not in',['ine']]]}" colspam="2" readonly="1"/>
                  <field name="primerApellidoCedula" attrs="{'invisible':[['state','not in',['cedula']]]}" colspam="2" readonly="1"/>
                  <field name="segundoApellidoCedula" attrs="{'invisible':[['state','not in',['cedula']]]}" colspam="2" readonly="1"/>
                  <field name="nombresCedula" attrs="{'invisible':[['state','not in',['cedula']]]}" colspam="2" readonly="1"/>
                  <field name="institucion" attrs="{'invisible':[['state','not in',['cedula']]]}" colspam="2" readonly="1"/>
                  <field name="tipo_cedula" attrs="{'invisible':[['state','not in',['cedula']]]}" colspam="2" readonly="1"/>
                  <field name="titulo" attrs="{'invisible':[['state','not in',['cedula']]]}" colspam="2" readonly="1"/>
                  <field name="estatus_cedula" attrs="{'invisible':[['state','not in',['cedula']]]}" colspam="2" readonly="1"/>
                  <field name="id_contacto" colspam="2" readonly="1"/>
                  <field name="intentos" attrs="{'invisible':[['state','not in',['foto']]]}" colspam="2" readonly="1"/>
                  <field name="intentos_ine" attrs="{'invisible':[['state','not in',['ine']]]}" colspam="2" readonly="1"/>
                  <field name="estatus_gen" colspam="2" readonly="1"/>
                  <field name="intentos_cedula" attrs="{'invisible':[['state','not in',['cedula']]]}" colspam="2" readonly="1"/>
                  <field name="banco" attrs="{'invisible':[['state','not in',['bancarios']]]}" colspam="2" readonly="1"/>
                  <field name="cuenta" attrs="{'invisible':[['state','not in',['bancarios']]]}" colspam="2" readonly="1"/>
                  <field name="clabe" attrs="{'invisible':[['state','not in',['bancarios']]]}" colspam="2" readonly="1"/>
                  <field name="rfc" attrs="{'invisible':[['state','not in',['bancarios']]]}" colspam="2" readonly="1"/>
                </group>
            </sheet>
            
        </form>
      </field>
    </record>
      
    <record model="ir.ui.view" id="valida_curp.tree">
      <field name="name">valida_curp tree</field>
      <field name="model">valida_curp.valida_curp</field>
      <field name="arch" type="xml">
        <tree>
            <field name="primerApellido"/>
            <field name="segundoApellido"/>
            <field name="nombres"/>
            <field name="titulo"/>
            <field name="institucion"/>
            <field name="ciudad"/>
            <field name="codigo_postal"/>
        </tree>
      </field>
    </record>
      
     <record model="ir.ui.view" id="valida_curp.tree2">
      <field name="name">valida_curp datos</field>
      <field name="model">valida_curp.valida_curp</field>
      <field name="arch" type="xml">
        <tree>
            <field name="ine"/>
            <field name="ine_foto"/>
            <field name="cedula"/>
            <field name="nombres"/>
            <field name="state"/>
        </tree>
      </field>
    </record>
      
    <record model="ir.actions.act_window" id="valida_curp.action_window">
      <field name="name">Datos de especialistas</field>
      <field name="res_model">valida_curp.valida_curp</field>
      <field name="view_mode">tree,form</field>
      <field name="view_id" ref="valida_curp.tree"/>
    </record>
      
    <record model="ir.actions.act_window" id="valida_curp.action_window2">
      <field name="name">Datos de especialistas</field>
      <field name="res_model">valida_curp.valida_curp</field>
      <field name="view_mode">tree,form</field>
      <field name="view_id" ref="valida_curp.tree2"/>
    </record>
      

       <!-- Aqui van los modulos-->    
    <menuitem name="valida_curp" id="valida_curp.menu_root"/>


    <menuitem name="CEDULA" id="valida_curp.menu_1" parent="valida_curp.menu_root"/>
      

    <menuitem name="Datos especialistas" id="valida_curp.menu_1_list" parent="valida_curp.menu_1"
              action="valida_curp.action_window"/>
      
    <menuitem name="Documentos" id="valida_curp.menu_2_list" parent="valida_curp.menu_1"
              action="valida_curp.action_window2"/>

  </data>
</odoo>